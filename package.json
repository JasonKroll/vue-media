{
  "name": "vue-media",
  "version": "1.0.0",
  "description": "A CSS media query component for Vue.js",
  "repository": {
    "url": "egoist/vue-media",
    "type": "git"
  },
  "main": "dist/vue-media.common.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "xo",
    "prepublish": "npm run build",
    "build": "bili --format cjs,umd --compress --module-name Media --banner",
    "example": "poi",
    "build:example": "poi build",
    "gh": "npm run build:example && gh-pages -d example/dist"
  },
  "poi": {
    "entry": "example/index.js",
    "dist": "example/dist",
    "homepage": "/vue-media/"
  },
  "xo": {
    "extends": "rem/prettier",
    "ignores": [
      "example/**"
    ],
    "envs": [
      "browser"
    ],
    "rules": {
      "no-unused-expressions": 0
    }
  },
  "author": "egoist <0x142857@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "bili": "^0.16.0-rc.2",
    "eslint-config-rem": "^3.1.0",
    "gh-pages": "^1.0.0",
    "poi": "^9.0.2",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "json2mq": "^0.2.0"
  }
}
